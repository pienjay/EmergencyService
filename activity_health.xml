<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".health">

    <Button
        android:id="@+id/hospital"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@color/grey"
        android:text="Hospital"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="hospital"
        />

    <Button
        android:id="@+id/healthcare"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@color/grey"
        android:text="Health Care"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:onClick="healthcare"
        />

    <Button
        android:id="@+id/doctor"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@color/grey"
        android:text="Doctor"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:onClick="doctor"
        />

    <Button
        android:id="@+id/pharmacy"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@color/grey"
        android:text="Pharmacy"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:onClick="pharmacy"
        />

    <Button
        android:id="@+id/dentist"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@color/grey"
        android:text="Dentist"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:onClick="dentist"
        />

</RelativeLayout>
